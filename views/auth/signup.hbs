<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>inContest</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="d-flex align-items-center py-4 bg-body-tertiary">
    <div id="login-form" class="w-100 m-auto" style="max-width: 330px;">
      <div class="d-flex justify-content-between  align-items-center mb-4">
       <a href="/"><img class="ps-0" src="/images/iconText.png" style="height: 56px;" alt=""></a>
        <a href="/auth/login"><button
            class="btn btn-outline-secondary btn-sm w-100 py-2"
          >Login</button></a>
      </div>

      <form action="/auth/signup" method="POST">
        <h2 class="h3 mb-3 fw-normal">Sign Up</h2>
        <div class="mt-4 form-floating">
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="Your username"
            id="floatingInput"
          />
          <label for="floatingInput">
            Username
          </label>
        </div>
        <div class="mt-4 form-floating">
          <input
            class="form-control"
            id="floatingEmail"
            type="email"
            name="email"
            placeholder="Your email"
          />
          <label id="floatingEmail">
            Email
          </label>
        </div>
        <div class="mt-4 form-floating">
          <input
            id="floatingPassword"
            class="form-control"
            type="password"
            name="password"
            placeholder="Your password"
          />
          <label id="floatingPassword">
            Password
          </label>
        </div>

        <button class="btn btn-primary w-100 py-2 mt-4" type="submit">Sign Up</button>

        {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js
"
    ></script>
    <script src="/js/script.js"></script>
  </body>

</html>