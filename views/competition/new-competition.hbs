<form action="/new-competition" method="post">
  <label for="">Competition name</label>
  <input type="text" name="name" />
  <label for="">Desdcription</label>
  <input type="text" name="desdcription" />
  {{#each allUsers}}
    <div>
      <input type="checkbox" id="scales" name="userGroup" value="{{_id}}" unchecked />
      <label for="scales">{{username}}</label>
    </div>
  {{/each}}
  <button type="submit">Create a new competition</button>
</form>