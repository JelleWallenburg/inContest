<div class="d-flex flex-row justify-content-between">
  <div class="d-flex align-items-center align-self-center flex-row">
    <a href="/portfolio">
      <span class="material-icons md-48">arrow_back_ios</span>
    </a>
    <h1 class="ms-2">Create new observation</h1>
  </div>
</div>

    <form
    class="mt-4"
    style="width: 50%"
    action="/portfolio/add-result"
    method= "POST"
    >
        <label class="form-label mb-1">Reference date</label>
            <input class="form-control mb-3" list="portfolio-reference-dates" name="referenceDate" placeholder="Reference date">
            <datalist id= "portfolio-reference-dates">
                <option value= "2023-01-01">
                <option value= "2023-02-01">
                <option value= "2023-03-01">
                <option value= "2023-04-01">
                <option value= "2023-05-01">
                <option value= "2023-06-01">
                <option value= "2023-07-01">
                <option value= "2023-08-01">
                <option value= "2023-09-01">
                <option value= "2023-10-01">
                <option value= "2023-11-01">
                <option value= "2023-12-01">
            </datalist>
        <label class="form-label mb-1"> Total account</label>
        <input class="form-control mb-3" type="text" name="totalAccount" placeholder="Your total account" />
        <label class="form-label mb-1"> Total portfolio value</label>
        <input class="form-control mb-3" type="text" name="totalPortfolio" placeholder="Your total portfolio value" />
        <label class="form-label mb-1"> Total result</label>
        <input class="form-control mb-3" type="text" name="totalResult" placeholder="Your total result" />
        <button class="btn btn-primary" type="submit">Submit result</button>
               {{#if errorMessage}}
          <p class="alert alert-danger fade show mt-3">{{errorMessage}}</p>
        {{/if}}
    </form>

